---
import Layout from "../layouts/Layout.astro";
import IlustrationSignMobile from "../components/SVG/IlustrationSignMobile.astro";
import ListItem from "../components/ListItem.astro";
import Form from "../components/Form.jsx";
import IlustrationSignDesktop from "../components/SVG/IlustrationSignDesktop.astro";
---

<Layout title="Discovery">
  <main
    class="bg-white min-h-screen md:w-[70%] md:m-auto md:rounded-xl md:flex md:p-12 md:items-center"
  >
    <header
      class="flex justify-center mb-4 md:order-2 md:justify-center md:rounded-xl"
    >
      <span class="block md:hidden"><IlustrationSignMobile /></span>
      <span class="hidden md:block"><IlustrationSignDesktop/></span>
    </header>

    <section
      class="p-4 flex flex-col gap-y-4 md:order-1 md:flex md:flex-col md:gap-y-6"
    >
      <h1 class="title text-gray-1 text-4xl md:text-6xl">Stay updated!</h1>
      <p class="mb-2 text-lg md:text-2xl">
        Join 60,000+ product managers receiving monthly updates on:
      </p>

      <div class="flex flex-col gap-y-2 mb-4 md:gap-y-4">
        <ListItem>Product discovery and building what matters</ListItem>
        <ListItem>Measuring to ensure updates are a success</ListItem>
        <ListItem>And much more</ListItem>
      </div>

      <Form client:load />
    </section>
  </main>
</Layout>

<style>
  .title {
    font-family: "Roboto-Bold";
  }
</style>
